<%= render 'shared/errors', obj: @chef %>

<section class="section">
  <div class="container">
    <div class="columns  is-centered">
      <div class="column is-half">
        <%= form_for @chef do |f| %>
          <div class="field">
            <label class="label"><%= f.label :chefname, "Naam" %></label>
            <div class="control">
              <%= f.text_field :chefname, class: "input is-primary",  placeholder: "Naam", autofocus: true %>
            </div>
          </div>
          <div class="field">
            <label class="label"><%= f.label :email %></label>
            <div class="control">
              <%= f.email_field :email, class: "input is-primary",  placeholder: "voorbeeld: example@example.nl", autofocus: true %>
            </div>
          </div>
          <div class="field">
            <label class="label"><%= f.label :password, "Wachtwoord" %></label>
            <div class="control">
              <%= f.password_field :password, class: "input is-primary",  placeholder: "wachtwoord", autofocus: true %>
            </div>
          </div>
          <div class="field">
            <label class="label"><%= f.label :password_confirmation, "Herhaal wachtwoord" %></label>
            <div class="control">
              <%= f.password_field :password_confirmation, class: "input is-primary",  placeholder: "herhaal wachtwoord", autofocus: true %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.submit(@chef.new_record? ? "Maak mijn account" : "Aanpassen account",
                         class: "button is-primary")%>
            </div>
          </div>
        <% end %>
        <hr>
        [ <%= link_to "Keer terug naar alle recepten zonder opslaan", recipes_path %> ]
      </div>
    </div>
  </div>
</section>

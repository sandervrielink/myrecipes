<div class="container">
<%= will_paginate @collection, renderer: BulmaPagination::Rails %>
</div>
<section class="section">
  <div class="container has-text-centered">
    <div class="columns is-multiline">
      <% @chefs.each do |chef| %>
        <div class="column is-one-fifth">
          <div class="card">
            <div class="card-image">
              <figure class="image is-square">
                <%= gravatar_for(chef,size:120) %>
              </figure>
            </div>
            <div class="card-content">
              <%= link_to "Delete this chef", chef_path(chef), class: "button is-danger", method: :delete, data: {confirm: "Zeker weten? Alle recepten worden ook verwijderd van deze chef!"} %>

            </div>
            <div class="card-content">
              <div class="content">
                <p class="title is-4"><%= link_to chef.chefname.capitalize, chef_path(chef) %></p>
                <p class="heading">Aantal recepten</p>
                <p class="title"><%= link_to chef.recipes.count, chef_path(chef) %> </p>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    <div class="columns">
  </div>
</section>
<div class="container">
<%= will_paginate @collection, renderer: BulmaPagination::Rails %>
</div>

<section class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-one-fifth">
          <p><%=link_to gravatar_for(@recipe.chef), recipes_path %></p>
          <p class="subtitle is-6"><%= @recipe.chef.chefname%></p>
        </div>
        <div class="column">
          <h1 class="title is-2 is-capitalized"><%= @recipe.name.capitalize %></h1>
          <p class="text-readable"><%= simple_format(@recipe.description) %></p>
          <hr>
          <p class="small-1">Created <%= time_ago_in_words(@recipe.created_at) %> ago</p>
        </div>

      <hr>


    </div>
  </div>
</section>

<section class="hero">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-one-fifth">
          <p><%=link_to gravatar_for(@recipe.chef), recipes_path %></p>
          <p class="subtitle is-6"><%= @recipe.chef.chefname%></p>
        </div>
        <div class="column">
          <h1 class="title is-2 is-capitalized"><%= @recipe.name.capitalize %></h1>
          <p class="text-readable"><%= simple_format(@recipe.description) %></p>
          <hr>
          <div class="level">
            <div class="level-left">
              <p class="small-1">Created <%= time_ago_in_words(@recipe.created_at) %> ago</p>
            </div>
            <div class="level-right">
              <%= link_to "Recept Aanpassen", edit_recipe_path(@recipe), class: "button is-primary" %>
              <%= link_to "Verwijder Recept", recipe_path(@recipe), method: :delete,
                                            data: { confirm: "Verwijder recept?" }, 
                                            class: "button is-danger" %>
            </div>
          </div>
        </div>
      <hr>

    </div>
  </div>
</section>

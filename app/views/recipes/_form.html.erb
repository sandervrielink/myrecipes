<%= render 'shared/errors', obj: @recipe %>

<section class="section">
  <div class="container">
    <div class="columns  is-centered">
      <div class="column is-half">
        <%= form_for @recipe do |f| %>
          <div class="field">
            <label class="label"><%= f.label :name, "Recept" %></label>
            <div class="control">
              <%= f.text_field :name, class: "input is-primary",  placeholder: "Geef de titel van het recept weer", autofocus: true %>
            </div>
          </div>
          <div class="field">
            <label class="label"><%= f.label :description, "Omschrijving" %></label>
            <div class="control">
              <%= f.text_area :description, rows: 10, class: "textarea is-primary",  placeholder: "Beschrijf het recept", autofocus: true %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.submit class: "button is-primary"%>
            </div>
          </div>
        <% end %>
        <hr>
        [ <%= link_to "Keer terug naar alle recepten zonder opslaan", recipes_path %> ]
      </div>
    </div>
  </div>
</section>
